/* pages/user/user.wxss */
.all {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

.user {
    margin: 60rpx 34rpx 0 34rpx;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: flex-start;
}
.userLeft .userPhoto {
    margin: 0 20rpx;
}
.userPhoto .photo {
    width: 120rpx;
    height: 120rpx;
    border-radius: 20rpx;
}
.user .userRight {
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: flex-start;
    margin-left: 10rpx;
}
.userRight .userName {
    margin-top: 5rpx;
}
.userName text {
    font-weight: 600;
}
.userRight .userTime {
    margin-top: 10rpx;
}
.userTime text {
    font-size: 24rpx;
}

.body {
    padding: 90rpx 60rpx 60rpx 60rpx;
}
.body .setGroup {
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: flex-start;
}
.setGroup .set {
    width: 100%;
    margin-bottom: 85rpx;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
    position:relative
}
.set .left {
    width: 60rpx;
    height: 60rpx;
    margin-right: 35rpx;
}
.set .right {
    width: 30rpx;
    height: 30rpx;
    margin-right: 20rpx;
    position:absolute;
    right:0
}