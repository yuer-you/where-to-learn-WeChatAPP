/* pages/classroom/classroom.wxss */
/* 可以删除，一般没用 */
.all {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

.head {
    margin: 26rpx 24rpx;
}
.Form{
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-around;
}
.Picker {
    display: inline-block;
    padding: 15rpx 25rpx;
    border-radius: 14rpx;
    border: 1px solid #555;

    font-size: 32rpx;
    font-weight: 400;
}

.body {
    display: flex;
    margin-bottom: 20rpx;
    position: absolute;
    width: 100vw;
    top: 122rpx;
    left: 0;
    bottom: 0;
}

.left {
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    margin-left: 12rpx;
    height: 100%;
    border-radius: 30rpx;
    border: 1px solid #555;
}
.time {
    margin: 0 10rpx 0 10rpx;
}
.left text {
    display: block;
    font-size: 24rpx;
}

.right {
    display: flex;
    height: 100%;
    margin: 0 12rpx;
    flex: 1;
    border-radius: 30rpx;
    border: 1px solid #555;
    overflow:hidden
}

.right scroll-view {
    margin: 0 20rpx 0 10rpx;
    display: flex;
    justify-content: flex-start;
    overflow:hidden
}

.right .classroom {
    margin: 0 10rpx;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: center;
}

.right .classroom text {
    margin: 30rpx 0 0 5rpx;
    white-space: nowrap;
}

.right .classroom .stateFlex {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    align-items: center;
}

.right .empty {
    width: 115rpx;
    height: 70rpx;
    border-radius: 100rpx;
    background-color: #75FF78;
}
.right .occupy {
    width: 115rpx;
    height: 70rpx;
    border-radius: 100rpx;
    background-color: #FF7878;
}
.right .unknow {
    width: 115rpx;
    height: 70rpx;
    border-radius: 100rpx;
    background-color: #c0c0c0;
}