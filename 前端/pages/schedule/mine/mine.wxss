/* pages/schedule/mine/mine.wxss */
.body {
    display: flex;
    margin-bottom: 20rpx;
    position: absolute;
    width: 100vw;
    top: 122rpx;
    left: 0;
    bottom: 0;

    box-sizing: border-box;
}

.left {
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    margin-left: 12rpx;
    height: 100%;
    border-radius: 30rpx;
    border: 1px solid #555;
}
.time {
    margin: 0 15rpx;
}
.left text {
    display: block;
    font-size: 32rpx;
    font-weight: 600;
}

.right {
    display: flex;
    height: 100%;
    margin: 0 12rpx;
    flex: 1;
    border-radius: 30rpx;
    border: 1px solid #555;
    overflow:hidden
}
.right scroll-view {
    margin: 0 20rpx 0 10rpx;
    display: flex;
    justify-content: flex-start;
    overflow:hidden
}
.right .schedule {
    margin: 0 15rpx;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: flex-start;
}
.right .schedule .scheduleText {
    margin: 30rpx 0 0 5rpx;
    white-space:nowrap;
    font-size: 32rpx;
    font-weight: 600;
}
.right .schedule .classFlex {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
}
.right .classFlex .class {
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: flex-start;
}
.right .class .className {
    margin-bottom: 10rpx;
    white-space:nowrap;
    font-size: 28rpx;
    font-weight: 400;
}
.right .class .classInfo {
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: flex-start;
}
.right .class .classInfo text {
    white-space:nowrap;
    margin-right: 10rpx;
    font-size: 24rpx;
    font-weight: 300;
}
.right .class .classInfo text:last-child {
    margin: 0;
}
